[
    // ---------------------------------
    // General
    // ---------------------------------
    {
        "key": "escape",
        "command": "workbench.action.closeSidebar",
        "when": "vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+z",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.toggleFullScreen",
                "workbench.action.activityBarLocation.default",
                "workbench.action.showMultipleEditorTabs"
            ]
        },
        "when": "isFullscreen"
    },
    {
        "key": "ctrl+z",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.toggleFullScreen",
                "workbench.action.activityBarLocation.hide",
                "workbench.action.hideEditorTabs"
            ]
        },
        "when": "!isFullscreen"
    },
    // ---------------------------------
    // Neovim commands
    // ---------------------------------
    // Normal mode
    {
        "key": "ctrl-h",
        "command": "workbench.action.navigateLeft",
        "when": "vim.mode == 'Normal'"
    },
    {
        "key": "ctrl-l",
        "command": "workbench.action.navigateRight",
        "when": "vim.mode == 'Normal'"
    },
    {
        "key": "ctrl-k",
        "command": "workbench.action.navigateUp",
        "when": "vim.mode == 'Normal'"
    },
    {
        "key": "ctrl-j",
        "command": "workbench.action.navigateDown",
        "when": "vim.mode == 'Normal'"
    },
    {
        "key": "g g",
        "command": "cursorTop",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "g d",
        "command": "editor.action.revealDefinition",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "g i",
        "command": "editor.action.goToImplementation",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "g r",
        "command": "editor.action.goToReferences",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "g s",
        "command": "workbench.action.gotoSymbol",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "space r",
        "command": "editor.action.rename",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "shift-k",
        "command": "editor.action.showHover",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "tab",
        "command": "workbench.action.showAllEditors",
        "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "space f f",
        "command": "workbench.action.quickOpen",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "space f w",
        "command": "workbench.action.findInFiles",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "space a",
        "command": "editor.action.codeAction",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "space /",
        "command": "editor.action.commentLine",
        "when": "(vim.mode == 'Normal' || vim.mode == 'VisualLine') && editorTextFocus"
    },
    // Insert mode
    {
        "key": "ctrl-j",
        "command": "cursorDown",
        "when": "vim.mode == 'Insert' && editorTextFocus"
    },
    {
        "key": "ctrl-k",
        "command": "cursorUp",
        "when": "vim.mode == 'Insert' && editorTextFocus"
    },
    {
        "key": "ctrl-h",
        "command": "cursorLeft",
        "when": "vim.mode == 'Insert' && editorTextFocus"
    },
    {
        "key": "ctrl-l",
        "command": "cursorRight",
        "when": "(vim.mode == 'Insert' && editorTextFocus"
    },
    // Visual mode
    {
        "key": "ctrl-j",
        "command": "editor.action.moveLinesDownAction",
        "when": "vim.mode == 'VisualLine' && editorTextFocus"
    },
    {
        "key": "ctrl-k",
        "command": "editor.action.moveLinesUpAction",
        "when": "vim.mode == 'VisualLine' && editorTextFocus"
    },
    {
        "key": "space p",
        "command": "runCommands",
        "when": "(vim.mode == 'VisualLine' || vim.mode == 'Visual') && editorTextFocus",
        "args": {
            "commands": [
                "editor.action.clipboardPasteAction",
                "extension.vim_escape"
            ]
        },
    },
    
    
    // ---------------------------------
    // File Explorer
    // ---------------------------------
    {
        "key": "space p v",
        "command": "workbench.view.explorer",
        "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)",
    },
    {
        "key": "enter",
        "command": "runCommands",
        "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsFolder && !inputFocus",
        "args": {
            "commands": [
                "explorer.openAndPassFocus",
                "workbench.action.toggleSidebarVisibility"
            ]
        }
    },
    {
        "key": "shift+5",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "shift+r",
        "command": "renameFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "d",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus"
    },
    {
        "key": "shift+d",
        "command": "deleteFile",
        "when": "explorerViewletFocus"
    },


    // ---------------------------------
    // Terminal 
    // ---------------------------------
    {
        "key": "alt+2",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "!terminalFocus"
    },
    {
        "key": "alt+1",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminalFocus"
    },


    // ---------------------------------
    // Git 
    // ---------------------------------
    {
        "key": "space g g",
        "command": "runCommands",
        "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)",
        "args": {
            "commands": ["workbench.view.scm", "workbench.scm.focus"]
        }
    },


    // ---------------------------------
    // Debug 
    // ---------------------------------
    {
        "key": "space d d",
        "command": "workbench.action.debug.selectandstart",
        "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && debuggersAvailable"
    },
    {
        "key": "space d t",
        "command": "workbench.action.debug.stop",
        "when": "vim.mode == 'Normal' && editorTextFocus && inDebugMode && !focusedSessionIsAttached"
    },
    {
        "key": "space d o",
        "command": "workbench.action.debug.stepOver",
        "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && inDebugMode && debugState == 'stopped'"
    },
    {
        "key": "space d b",
        "command": "editor.debug.action.toggleBreakpoint",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "space d e",
        "command": "editor.debug.action.showDebugHover",
        "when": "vim.mode == 'Normal' && editorTextFocus && inDebugMode && debugState == 'stopped'"
    },
    {
        "key": "space d c",
        "command": "workbench.action.debug.continue",
        "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && inDebugMode && debugState == 'stopped'"
    },

    // ---------------------------------
    // Command navigation
    // ---------------------------------
    {
        "key": "ctrl+n",
        "command": "quickInput.next",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "quickInput.previous",
        "when": "inQuickOpen"
    },

]
